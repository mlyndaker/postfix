# This file is generated by Chef for <%= node['fqdn'] %>

<% @settings['smtp_sasl_passwd_map'].each do |sender, auth| %>
<%= sender %> <%= auth['smtp_sasl_user_name'] %>:<%= auth['smtp_sasl_passwd'] %>
<% end if node['postfix']['main']['smtp_sender_dependent_authentication'] == 'yes' %>

<% unless node['postfix']['main']['relayhost'].empty? %>
<%= node['postfix']['main']['relayhost'] %> <%= @settings['smtp_sasl_user_name'] %>:<%= @settings['smtp_sasl_passwd'] %>
<% end %>
